{% extends '@layout/default.html.twig' %}

{% block title %}
    Cliente - {{ parent() }}
{% endblock %}

{% block page_header %}
    Remoção de Clientes
{% endblock %}


{% block content %}
    <div class="row">
        <div class="col-md-8">
            <div class="box box-primary">
                <div class="box-body">
                    <form name="form" role="form" method="post" action="{{ url('cliente.delete', {id : cliente.id}) }}">
                        <input type="hidden" class="form-control" name="_method" value="DELETE">
                        <div class="box-body">
                            <div class="form-group">
                                <label>Nome:</label>
                                <span>{{ cliente.nome }}</span>
                            </div>
                            <div class="form-group">
                                <label>Email:</label>
                                <span>{{ cliente.email }}</span>
                            </div>
                            <div class="form-group">
                                <label>CPF:</label>
                                <span>{{ cliente.cpf }}</span>
                            </div>
                        </div>
                        <div class="box-footer">
                            <button class="btn btn-primary" type="submit">Remover</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}